<?php
	include "connect.php";
	include "inscription_param.php";
	$vConn = fConnect();
	$vSql ="SELECT tSession.num, tSession.deb, tSession.fin, $CST_DISPO_SESSION-COUNT(tGroupe.session)
		FROM tSession LEFT JOIN tGroupe ON tSession.num=tGroupe.session GROUP BY num, deb, fin
		ORDER BY num
		;";

	$vQuery=pg_query($vConn, $vSql);
	while ($vResult = pg_fetch_array($vQuery))
	{
		echo "<tr>";
		echo "<td>Session $vResult[0]</td>";
		echo "<td>$vResult[1]</td>";
		echo "<td>$vResult[2]</td>";
		echo "<td>$vResult[3]</td>";
		echo "</tr>";
	}
?> 
</table>
